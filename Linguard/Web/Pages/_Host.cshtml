@page "/"
@namespace Linguard.Web.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model HostModel
@{
    Layout = "_Layout";
}

<environment include="Staging,Production">
    <component render-mode="ServerPrerendered" type="typeof(App)" />
</environment>
<environment include="Development">
    <component render-mode="Server" type="typeof(App)" />
</environment>

@section styles {
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css"/>
    <link id="linguard_style" rel="stylesheet" media="screen" href="@HostModel.Stylesheet" >
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" 
          integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" 
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="css/site.css" rel="stylesheet"/>
    <link href="Web.styles.css" rel="stylesheet"/>
}